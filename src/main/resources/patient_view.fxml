<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="350.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PatientController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="15.0">
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="PATIENT ID:" prefWidth="80.0" />
                        <TextField fx:id="patientId" prefWidth="120.0" />
                        <Button onAction="#handleGet" text="GET" />
                    </children>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="NAME:" prefWidth="80.0" />
                        <TextField fx:id="nameField" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="ADDRESS:" prefWidth="80.0" />
                        <TextField fx:id="addressField" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="PHONE:" prefWidth="80.0" />
                        <TextField fx:id="phoneField" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox spacing="10.0" style="-fx-padding: 10 0 0 0;">
                    <children>
                        <Button onAction="#handleSave" text="SAVE" prefWidth="65.0" />
                        <Button onAction="#handleUpdate" text="UPDATE" prefWidth="75.0" />
                        <Button onAction="#handleDelete" text="DELETE" prefWidth="70.0" />
                        <Button onAction="#handleClear" text="CLEAR" prefWidth="65.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>